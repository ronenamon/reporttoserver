<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <size android:width="90dp" android:height="35dp"></size>
            <corners android:radius="50dp"></corners>
            <solid android:color="#3794ff" />

            <corners android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#38e3e9" android:endColor="#56e3ff" android:angle="45">
            </gradient>
            <size android:width="120dp" android:height="35dp"></size>
            <corners android:radius="50dp"></corners>
            <stroke android:width="1dp" android:color="#ffffff" />
            <corners android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>